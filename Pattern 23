#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<" Enter a Digit : ";
    cin>>n;
    int row = 1;
    int count = 1;
    while(row <= n)
    {
        int space = n - row;
        while(space)
        {
            cout<<" ";
            space = space - 1;
        }
        int col = 1;
        while(col <= row)
        {
            cout<<count;
            count = count + 1;
            col = col + 1;
        }
        cout<<endl;
        row = row + 1;
    }
}

OUTPUT :-

 Enter a Digit : 7
      1
     23
    456
   78910
  1112131415
 161718192021
22232425262728
