#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<" Enter a Digit : ";
    cin>>n;
    int row = 1;
    while(row<=n)
    {
        int col = 1;
        char start = 'A'+n-row;
        while(col<=row)
        {
            cout<<start<<" ";
            start =  start + 1;
            col = col + 1;
        }
        cout<<endl;
        row = row + 1;
    }
}

OUTPUT :-

 Enter a Digit : 5
E 
D E 
C D E 
B C D E 
A B C D E 
